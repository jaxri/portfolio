                    a(href='#intern') Internships
                li.sidebar-nav-item
                    a(href='#resume') Resume/CV
                li.sidebar-nav-item
                    a(href='#contact') Contact

        // Header
        header.masthead.d-flex.align-items-center
            .container.px-4.px-lg-5.text-center
                h1.mb-1 Jackson Rini
                a.btn.btn-primary.btn-xl(href='#about') About Me

        // About
        section#about.content-section.bg-light
            .container.px-4.px-lg-5.text-center
                .row.gx-4.gx-lg-5.justify-content-center
                    .col-lg-10
                        h1 About Me
                        p.lead.mb-5
                            | Insert BIO
                        a.btn.btn-dark.btn-xl(href='#projects') Projects

